---
// Breadcrumbs component for navigation
export interface Props {
  items: Array<{
    label: string;
    href?: string;
  }>;
}

const { items } = Astro.props;
---

<nav class="flex items-center space-x-2 text-sm text-slate-600 dark:text-slate-400 mb-8" aria-label="Breadcrumb">
  <a href="/" class="hover:text-amber-400 transition-colors">Inicio</a>
  {items.map((item, index) => (
    <>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      {item.href ? (
        <a href={item.href} class="hover:text-amber-400 transition-colors">{item.label}</a>
      ) : (
        <span class="text-slate-700 dark:text-slate-300">{item.label}</span>
      )}
    </>
  ))}
</nav>